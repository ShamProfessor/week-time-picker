{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "examples/**/*"
  ]
}
